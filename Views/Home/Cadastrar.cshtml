@model PmspProjeto.Models.Servidor
@{
    ViewData["title"] = "Cadastrar";
}

<h2>
    Cadastro de Servidores
</h2>

<h3>
    Dados Pessoais
</h3>
<form method="POST">
    <div class="form-group" id="nome">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Nome">
        <span asp-validation-for="Nome"></span>
    </div>
    <div class="form-group" id="data_nasc">
        <label for="DataNascimento">Data de Nascimento</label>
        <input asp-for="DataNascimento" type="date" class="form-control">
        <span asp-validation-for="DataNascimento"></span>
    </div>
    <div class="form-group" id="email">
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <h3>
        Endereco
    </h3>
    <div class="form-group" id="logradouro">
        <label for="Endereco.Lograduro">Logradouro</label>
        <input asp-for="Endereco.Logradouro" type="text" class="form-control" placeholder="Logradouro">
        <span asp-validation-for="Endereco.Logradouro"></span>
    </div>
    <div class="form-group" id="numero">
        <label for="Endereco.Numero">Número</label>
        <input asp-for="Endereco.Numero" type="number" class="form-control" placeholder="Numero">
        <span asp-validation-for="Endereco.Numero"></span>
    </div>
    <div class="form-group" id="complemento">
        <label for="Endereco.Complemento">Complemento</label>
        <input asp-for="Endereco.Complemento" type="text" class="form-control" placeholder="Complemento">
        <span asp-validation-for="Endereco.Complemento"></span>
    </div>
    <div class="form-group" id="cep">
        <label for="Endereco.CEP">CEP</label>
        <input asp-for="Endereco.CEP" type="text" class="form-control" placeholder="CEP">
        <span asp-validation-for="Endereco.CEP"></span>
    </div>
    <h3>
        Dados Funcionais
    </h3>
    <div class="form-group" id="cargo">
        <label for="Cargo">Cargo</label>
        <input asp-for="Cargo" type="text" class="form-control" placeholder="Cargo">
        <span asp-validation-for="Cargo"></span>
    </div>
    <div class="form-group" id="rf">
        <label for="RF">RF</label>
        <input asp-for="RF" type="text" class="form-control" placeholder="RF">
        <span asp-validation-for="RF"></span>
    </div>
    <div class="form-group" id="vinculo">
        <label for="Vinculo">Vinculo</label>
        <input asp-for="Vinculo" type="number" class="form-control" placeholder="Vinculo">
        <span asp-validation-for="Vinculo"></span>
    </div>
    <div class="form-group" id="lotacao">
        <label for="UnidadeLotacao">Unidade de Lotação</label>
        <input asp-for="UnidadeLotacao" type="text" class="form-control" placeholder="Unidade de Lotação">
        <span asp-validation-for="UnidadeLotacao"></span>
    </div>
    <div class="form-group" id="exercicio">
        <label for="UnidadeExercicio">Unidade de Exercicio</label>
        <input asp-for="UnidadeExercicio" type="text" class="form-control" placeholder="Unidade de Exercicio">
        <span asp-validation-for="UnidadeExercicio"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-dafault">
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}